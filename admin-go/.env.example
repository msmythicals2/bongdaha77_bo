############################
# Database Configuration
############################

# Database host address
# Example: localhost / 127.0.0.1 / db
DB_HOST=localhost

# MySQL port (default: 3306)
DB_PORT=3306

# Database name
DB_NAME=your_database_name

# Database username
DB_USER=your_database_user

# Database password
DB_PASSWORD=your_database_password

# Database character set
# utf8mb4 supports full Unicode and emojis
DB_CHARSET=utf8mb4

# Enable time parsing (required by most Go MySQL drivers)
DB_PARSE_TIME=true

# Database timezone
# Use Local or Asia/Shanghai, UTC, etc.
DB_LOC=Local


############################
# Authentication / JWT
############################

# JWT signing secret (REQUIRED)
# Purpose:
# - Sign JWT tokens when users log in
# - Verify JWT tokens for protected APIs
#
# How to generate (RECOMMENDED):
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#
# Or using OpenSSL:
#   openssl rand -hex 32
#
# Notes:
# - 32 bytes (256-bit) key, suitable for HS256
# - Use DIFFERENT values for dev / staging / prod
# - Changing this value will invalidate all existing tokens
JWT_SECRET=your_jwt_secret_here

# JWT token expiration time
# Examples:
# - 15m  (recommended for admin systems)
# - 1h
JWT_EXPIRES_IN=15m


############################
# Server Configuration
############################

# HTTP server listening port
PORT=8080

# CORS allowed origins (comma-separated)
# Example: https://your-domain.com,http://localhost:3000
CORS_ALLOWED_ORIGINS=

# Gin running mode
# debug   : Development environment
# release : Production environment
GIN_MODE=debug
